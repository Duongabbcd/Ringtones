<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/_35sdp"
    android:paddingTop="@dimen/_18sdp"
    android:background="@drawable/background_radius_16"
    android:paddingBottom="@dimen/_52sdp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/top"
        android:backgroundTint="#D9D9D9"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/rewardBtn"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:gravity="center"
        android:background="@drawable/background_radius_10_gray"
        android:backgroundTint="#DA6849"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/imageview"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:src="@drawable/icon_reward_play"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:text="Free Unlock This"
            android:textColor="@color/white"
            android:padding="@dimen/_10sdp"
            style="@style/CustomTextStyleSemiBold18sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>