<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_30sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/origin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/backBtn"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/previousScreen"
                android:contentDescription="@string/imageview"
                android:src="@drawable/icon_back"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:padding="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/nameScreen"
                android:contentDescription="@string/imageview"
                android:text="@string/find_wallpaper"
                android:layout_marginStart="@dimen/_2sdp"
                style="@style/CustomTextStyleSemiBold18sp"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_24sdp"
                app:layout_constraintStart_toEndOf="@id/backBtn"
                app:layout_constraintTop_toTopOf="parent"/>


        </LinearLayout>


        <EditText
            android:id="@+id/searchText"
            style="@style/CustomTextStyle16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:background="@drawable/background_radius_100"
            android:paddingVertical="@dimen/_15sdp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:hint="@string/topic"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textColor="@color/customBlack"
            android:textColorHint="@color/textColorHint"
            android:textCursorDrawable="@drawable/cursor_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backBtn" />

        <ImageView
            android:id="@+id/closeButton"
            android:contentDescription="@string/imageview"
            android:src="@drawable/icon_close_black"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@id/searchText"
            app:layout_constraintTop_toTopOf="@id/searchText"
            app:layout_constraintBottom_toBottomOf="@id/searchText"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp" />

        <ImageView
            android:id="@+id/trendingIcon"
            android:contentDescription="@string/imageview"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/searchText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:src="@drawable/icon_fire"/>


        <TextView
            android:id="@+id/trendingTitle"
            android:contentDescription="@string/imageview"
            app:layout_constraintStart_toEndOf="@id/trendingIcon"
            android:text="@string/hot_search"
            android:gravity="center"
            style="@style/CustomTextStyleMedium16sp"
            app:layout_constraintTop_toTopOf="@id/trendingIcon"
            app:layout_constraintBottom_toBottomOf="@id/trendingIcon"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_height="@dimen/_24sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trendingRecyclerView"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_120sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/trendingIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clipToPadding="false"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/searchResult"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintBottom_toTopOf="@id/frBanner"
            app:layout_constraintTop_toBottomOf="@id/searchText">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/singleWallpaper"
                    style="@style/CustomTextStyleSemiBold14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/allResults1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/singleWallpaper" />

                <TextView
                    android:id="@+id/slideWallpaper"
                    style="@style/CustomTextStyleSemiBold14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="@string/slide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/allResults1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/allResults2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/slideWallpaper" />


                <TextView
                    android:id="@+id/videoWallpaper"
                    style="@style/CustomTextStyleSemiBold14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="@string/video"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/allResults2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/allResults3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/videoWallpaper" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/noDataLayout"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/searchText"
            android:layout_marginTop="@dimen/_43sdp">


            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:contentDescription="@string/imageview"
                android:src="@drawable/no_data"/>

            <TextView
                style="@style/CustomTextStyle14sp"
                android:gravity="center"
                android:text="@string/no_data_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toTopOf="@id/frBanner" />

        <include
            android:id="@+id/frBanner"
            layout="@layout/ads_banner" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <include
        android:id="@+id/noInternet"
        android:visibility="gone"
        layout="@layout/no_internet_connection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>