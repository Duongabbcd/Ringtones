<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:textDirection="locale"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_9sdp"
    android:background="@drawable/background_radius_12_light_gray"
    android:layout_height="wrap_content">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/categoryAvatar"
        android:scaleType="centerCrop"
        android:src="@drawable/orange_bg_gradient"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CustomShape12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_4sdp"
        android:contentDescription="@string/imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/categoryAvatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CustomTextStyleMedium12sp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>