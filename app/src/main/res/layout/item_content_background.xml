<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_75sdp"
    android:layout_height="@dimen/_133sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_4sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/callScreenBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/default_wallpaper"
        android:padding="@dimen/_2sdp"
        app:strokeColor="@color/defaultGray"
        app:strokeWidth="@dimen/_2sdp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CustomShape16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/video"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_margin="@dimen/_4sdp"
        android:contentDescription="@string/imageview"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/icon_live_wallpaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>