<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardElevation="@dimen/_6sdp"
    android:backgroundTint="#E9DCFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_14sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingBottom="@dimen/_28sdp">

        <!-- Top Time and Icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:10"
                style="@style/CustomTextStyleMedium14sp" />

            <ImageView
                android:id="@+id/ccIcon"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_subtitle" />
        </RelativeLayout>

        <!-- Record Image -->
        <ImageView
            android:id="@+id/imageRecord"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_190sdp"
            android:layout_gravity="center"
            android:src="@drawable/icon_red_disc" />

        <!-- Control Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_46sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:contentDescription="@string/imageview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_prev" />

            <ImageView
                android:layout_weight="2"
                android:contentDescription="@string/imageview"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:src="@drawable/icon_play" />

            <ImageView
                android:layout_weight="1"
                android:contentDescription="@string/imageview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_next_ring" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
